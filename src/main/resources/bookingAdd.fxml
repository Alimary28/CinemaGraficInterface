<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.BookingController">

    <HBox alignment="TOP_CENTER">
        <Label text="Booking id:"/>
        <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="10.0" prefWidth="446.0"/>
    <HBox alignment="center">
        <Label text="Movie id:"/>
        <Spinner fx:id="spnMovieId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="10.0" prefWidth="446.0"/>
    <HBox alignment="center">
        <Label text="Card id:"/>
        <Spinner fx:id="spnClientCardId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="18.0" prefWidth="446.0"/>
    <HBox alignment="CENTER">
        <TextField fx:id="txtDay" promptText="Day"/>
        <TextField fx:id="txtMonth" promptText="Month"/>
        <TextField fx:id="txtYear" promptText="Year"/>
    </HBox>
    <HBox alignment="CENTER">
        <TextField fx:id="txtHour" promptText="Hour"/>
        <TextField fx:id="txtMinutes" promptText="Minutes"/>
    </HBox>
    <Pane prefHeight="15.0" prefWidth="446.0"/>
    <Button text="Add" fx:id="btnBookingAdd" onAction="#btnAddClick" />
    <Button text="Cancel" fx:id="btnBookingCancel" onAction="#btnCancelClick" />
</VBox>
