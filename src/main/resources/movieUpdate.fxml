<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MovieController">
    <HBox alignment="TOP_CENTER">
        <Label text="Movie"/>
        <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="5.0" prefWidth="330.0"/>
    <HBox alignment="TOP_CENTER">
        <TextField fx:id="txtMovieYear" prefHeight="30.0" prefWidth="120.0" promptText="Year"/>
        <TextField fx:id="txtMovieTitle" prefHeight="30.0" prefWidth="120.0" promptText="Title"/>
        <TextField fx:id="txtPrice" prefHeight="30.0" prefWidth="120.0" promptText="Price"/>
    </HBox>
    <Pane prefHeight="5.0" prefWidth="330.0"/>
    <CheckBox fx:id="chkInCinema" text="In Cinema"/>
    <Pane prefHeight="5.0" prefWidth="330.0"/>

    <HBox alignment="TOP_CENTER">
        <Button text="Update" fx:id="btnUpdate" onAction="#btnUpdateClick" />
        <Button text="Cancel" fx:id="btnCancel" onAction="#btnCancelClick" />
    </HBox>
</VBox>
